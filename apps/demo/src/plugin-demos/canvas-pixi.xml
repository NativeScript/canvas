<Page xmlns:canvas="@nativescript/canvas" xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo"
			class="page">
	<Page.actionBar>
		<ActionBar title="canvas-pixi" icon="" class="action-bar">
		</ActionBar>
	</Page.actionBar>
	<GridLayout width="100%" height="100%">
		<canvas:Canvas style="width:100%; height:auto;" id="canvas" ready="{{canvasLoaded}}" loaded="{{loaded}}"
									 unloaded="{{unloaded}}"/>
	</GridLayout>
</Page>
