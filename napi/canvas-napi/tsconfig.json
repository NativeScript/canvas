{
	"compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "nodenext",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"noEmitHelpers": true,
		"noEmitOnError": false,
		"allowJs": true,
		"importHelpers": true,
		"target": "ESNext",
		"outDir": "./dist",
		"lib": ["ESNext", "dom"],
		"noEmit": false
	},
	"extends": "@tsconfig/node22/tsconfig.json",
	"include": ["canvas.ts", "index.ts", "polyfill.ts", "utils/*.ts", "references.d.ts"],
	"exclude": ["node_modules", "examples"]
}
